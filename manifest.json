{
  "manifest_version": 3,
  "name": "YouTube Feed Customizer",
  "version": "1.0",
  "description": "Customizes the YouTube feed layout",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}